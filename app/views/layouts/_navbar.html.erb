<% if user_signed_in? && (current_user.manager? || current_user.employee?) %>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <span class="navbar-brand">
        Welcome <strong><%= get_username %></strong>
      </span>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to 'Home', root_path, class:"nav-item nav-link #{root_path == request.original_url ? 'active' : ''}" %>
          </li>
          <% if current_user.manager? %>
            <li class="nav-item">
              <%= link_to 'Create Project', new_project_path, class:"nav-item nav-link #{new_project_path == request.original_url ? 'active' : ''}" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Manage Projects', root_path, class: "nav-item nav-link #{root_path == request.original_url ? 'active' : ''}" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Validate Time', root_path, class:"nav-item nav-link #{request.original_url.include?(root_path) ? 'active' : ''}" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Log Time', root_path, class:"nav-item nav-link #{root_path == request.original_url ? 'active' : ''}" %>
            </li>
          <% end %>
          <li class="nav-item">
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'nav-item nav-link'  %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
